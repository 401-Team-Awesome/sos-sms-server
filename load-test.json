{
  "config": {
    "target": "https://sarasaurus.herokuapp.com/",
    "phases": [
      {
       "duration": 2,
       "arrivalRate": 10
      },
      {
        "duration": 20,
        "arrivalRate": 10
      }
    ],
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/signup",
            "json": {
              "username": "{{ username }}",
              "email": "{{ email }}",
              "password": "{{ password }}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
        ,{
          "post": {
            "url": "/profiles",
            "headers": {
              "Authorization": "Bearer {{ token }}"
            },
            "json": {
              "bio": "{{ bio }}",
              "avatar": "{{ avatar }}",
              "firstName": "{{ firstName }}",
              "lastName": "{{ lastName }}"
            }
          }
        }
      ]
    }
  ]
}